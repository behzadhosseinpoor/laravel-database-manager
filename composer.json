{
    "name": "behzadhosseinpoor/laravel-database-manager",
    "description": "A Laravel package for managing MySQL, SQL Server and SQLite databases using Livewire.",
    "keywords": [
        "behzadhosseinpoor",
        "laravel-database-manager"
    ],
    "homepage": "https://github.com/behzadhosseinpoor/laravel-database-manager",
    "license": "MIT",
    "authors": [
        {
            "name": "Behzad HosseinPoor",
            "email": "behzad.hp@yahoo.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "laravel/framework": "^8.37|^9.0|^10.0|^11.0|^12.0"
    },
    "require-dev": {
        "orchestra/testbench": "^6.47.1|^7.55|^8.36|^9.15|^10.8"
    },
    "autoload": {
        "psr-4": {
            "BehzadHosseinPoor\\DatabaseManager\\": "src/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "BehzadHosseinPoor\\DatabaseManager\\DatabaseManagerServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "audit": {
            "block-insecure": false
        }
    },
    "scripts": {
        "post-autoload-dump": "@composer run prepare",
        "prepare": "@php ./vendor/bin/testbench package:discover --ansi",
        "build": [
            "@php ./vendor/bin/testbench package:create-sqlite-db",
            "@php ./vendor/bin/testbench database-manager:install"
        ],
        "serve": [
            "@composer run build",
            "@php ./vendor/bin/testbench serve"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
